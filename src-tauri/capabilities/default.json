{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "core:event:default",
    "dialog:allow-open",
    "os:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "bin/rsync",
          "sidecar": true,
          "args": [
            "-av",
            "--info=progress2",
            { "validator": ".*" },
            { "validator": ".*" }
          ]
        }
      ]
    }
  ]
}